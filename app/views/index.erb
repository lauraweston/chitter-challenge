<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Chitter</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <% @posts.each do |post| %>
        <div class="thumbnail">
          <div class="caption">
            <h3>User</h3>
            <h4>@user_name</h4>
            <p><%= post.message %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
